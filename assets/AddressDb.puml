table(EnumType) {
    primary_key(Id)
    Code
}

table(EnumTypeItem) {
    primary_key(Id)
    Code
    foreign_key(EnumTypeId)
    PrimarySortOrder
    SecondarySortOrder
    }

    table(AddressForm) {
    primary_key(Id)
    foreign_key(CountryId)
    foreign_key(AddressFormTypeId)
}

table(AddressField) {
    primary_key(Id)
    Name
}

table(AddressFieldLabel) {
    primary_key(Id)
    LabelKey
}

table(Address) {
    primary_key(Id)
    foreign_key(CountryId)
    foreign_key(AddressFormId)
