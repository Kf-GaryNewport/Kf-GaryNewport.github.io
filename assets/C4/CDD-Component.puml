@startuml "Cdd Component"

!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

LAYOUT_TOP_DOWN

Container(hub, "Web Application", "C#", "Allows users to view contacts, activities, properties, etc.")
ContainerDb(cdb, "DataStore", "Azure TableStorage", "Stores Responces")
System_Ext( nr, "Northrow")

Container_Boundary(c1, "CDD"){
    Component(api, "API", "C#", "Provides ")
    Component(bll, "Busness Library", "C#", "Provides Automated Due Diligence information on contacts and companies")

    Rel( api, bll, "Uses", "JSON/HTTPS")
    Rel( bll, cdb, "Reads from\nand Writes to")
    Rel_U( bll, hub, "Request still used ?")
}

Rel( hub, api, "Uses", "JSON/HTTPS")
Rel( bll, nr, "Uses", "JSON/HTTPS")

@enduml